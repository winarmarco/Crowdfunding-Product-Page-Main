          <div class="flex row justify-between">
            <button class="btn btn-cyan">Back this project</button>
            <button class="btn bookmark-btn">
              <img src="/images/icon-bookmark.svg" alt="" />
              <span>Bookmark</span>
            </button>
          </div>
        </div>

        <div class="testimonials card">
          <div class="testimonial">
            <h2>$89,914</h2>
            <span>of $100,1000 backed</span>
          </div>
          <span class="line"></span>
          <div class="testimonial">
            <h2>5,007</h2>
            <span>total backers</span>
          </div>
          <span class="line"></span>
          <div class="testimonial">
            <h2>56</h2>
